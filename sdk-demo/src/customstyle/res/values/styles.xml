<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- PayMaya Vault custom styles -->

    <!-- Screen background -->
    <style name="PayMayaVaultBackground">
        <item name="android:background">#000</item>
    </style>

    <!-- Logo -->
    <!-- Image can be set also using PayMayaVault.Builder().logo() method -->
    <style name="PayMayaVaultLogo">
        <item name="android:src">@drawable/custom_logo</item>
    </style>

    <!-- "Card details" label -->
    <style name="PayMayaVaultCardDetailsLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/paymaya_vault_card_details_label</item>
    </style>

    <!-- Card details form background -->
    <style name="PayMayaVaultFormBackground">
        <item name="android:background">#1d1d1d</item>
    </style>

    <!-- Text input fields -->
    <style name="PayMayaVaultTextInputLayoutTheme">
        <item name="android:textColorHint">#aaa</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="colorAccent">#0f0</item>-->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/paymaya_vault_input_text_accent</item>
    </style>

    <style name="PayMayaVaultTextInputEditText">
        <item name="android:textColor">#e1e1e1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- "PAY" button -->
    <style name="PayMayaVaultPayButton">
        <item name="android:backgroundTint">@color/paymaya_vault_button_background_color</item>
        <item name="android:textColor">#e1e1e1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Spinner/progressbar -->
    <style name="PayMayaVaultProgressbar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

</resources>
